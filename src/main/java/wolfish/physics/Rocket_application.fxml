<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import wolfish.physics.RocketCanvas?>
<GridPane fx:controller="wolfish.physics.RocketController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>


    <Label text="Velocity"
           GridPane.columnIndex="0" GridPane.rowIndex="0"/>

    <TextField fx:id="velocityField"
            GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Angle"
           GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <TextField fx:id="angleField"
            GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Seconds"
           GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <TextField fx:id="secondsField"
            GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Button fx:id="calculateButton" text="Calculate" onAction="#calculateRocket"
            GridPane.columnIndex="1" GridPane.rowIndex="3"/>


    <Label fx:id="position"
           GridPane.columnIndex="0" GridPane.rowIndex="4" />


    <Label fx:id="flightTime"
           GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2"/>


    <RocketCanvas fx:id="rocketCanvas" width="288" height="200" GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.columnSpan="2" />




</GridPane>
